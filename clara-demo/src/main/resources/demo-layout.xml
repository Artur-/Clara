<?xml version="1.0" encoding="utf-8"?>
<!--
 
    Modify this XML layout definition and click the Update button
    to see your changes on the right.

    Try to move around the id attributes to see effects of the
    binding. For example you can move the bound data source of
    the Table to the Select. Or you can change the value change
    event handler from the RatingStars component to the DateField
    by moving the value-field id.
    
    Have fun!
     
-->
<VerticalLayout xmlns="urn:vaadin:com.vaadin.ui"
    xmlns:a="urn:vaadin:org.vaadin.teemu.ratingstars" spacing="true"
    margin="true false false true">

    <Label id="label" value="Welcome to Clara demo application." />

    <HorizontalLayout caption="Horizontal button row" spacing="true">
        <Button id="button" caption="Click me to invoke the controller" />
        <Button id="another-button" width="200px" caption="Click me too" />
    </HorizontalLayout>

    <DateField caption="Select a date" id="date" immediate="true" />
    <a:RatingStars id="value-field" immediate="true" caption="Rate this app" />

    <Table id="person-list" width="70%" caption="Controller provides my datasource..." layout_componentAlignment="MIDDLE_CENTER" pageLength="2" />
    <Select caption="...try moving the person-list id to me" itemCaptionPropertyId="Name" />
</VerticalLayout>